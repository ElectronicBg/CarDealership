@model CarDealership.Models.Model
@{
    ViewData["Title"] = "Edit Model";
}

<h2>Edit Model</h2>
<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="ModelId" />

    <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Brand" class="form-label"></label>
        <select asp-for="Brand" asp-items="@(new SelectList(ViewBag.Brands, "BrandId", "Name"))" class="form-control">
            <option value="">Select a brand</option>
        </select>
        <span asp-validation-for="BrandId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update Model</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to Models List</a>
