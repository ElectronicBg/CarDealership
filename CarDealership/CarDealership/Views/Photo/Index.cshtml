@model IEnumerable<CarDealership.Models.Photo>

<h2>Photos List</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Car ID</th>
            <th>URL</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var photo in Model)
        {
            <tr>
                <td>@photo.PhotoId</td>
                <td>@photo.CarId</td>
                <td>@photo.Url</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@photo.PhotoId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@photo.PhotoId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Photo</a>
