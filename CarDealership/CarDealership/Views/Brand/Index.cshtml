@model IEnumerable<CarDealership.Models.Brand>
@{
    ViewData["Title"] = "Brands List";
}

<div class="container">
    <h2>Списък с Марки</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Име</th>
                <th>Опции</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var brand in Model)
            {
                <tr>
                    <td>@brand.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@brand.BrandId" class="btn btn-primary">Редактирай</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Create" class="btn btn-success">Добави нова Марка</a>
</div>
