@model IEnumerable<CarDealership.Models.CarColor>
@{
    ViewData["Title"] = "Colors List";
}

<div class="container">
    <h2>Colors List</h2>
    <div class="row">
        @foreach (var color in Model)
        {
            <div class="col-md-3 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@color.Name</h5>
                        <div class="color-display mb-2" style="width:20px; height:20px; background-color: @color.Value;"></div>
                        <a href="@Url.Action("Edit", new { id = color.CarColorId })" class="btn btn-primary">Edit</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <a asp-action="Create" class="btn btn-success">Add New Color</a>
</div>